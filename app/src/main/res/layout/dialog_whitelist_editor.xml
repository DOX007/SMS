<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Fält för rubrik/namn till Telegram-logg -->
    <EditText
        android:id="@+id/header_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rubrik till Telegram-logg (t.ex. Ditt namn)"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/whitelist_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/whitelist_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Lägg till nummer" />

        <Button
            android:id="@+id/whitelist_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lägg till" />
    </LinearLayout>
</LinearLayout>

